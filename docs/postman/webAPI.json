{
	"info": {
		"_postman_id": "webAPI",
		"name": "Web User",
		"description": "API endpoints for Chroma AI Web User (mobile app/browser)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get User Server",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "User-ID",
						"value": "user-123",
						"description": "Идентификатор пользователя"
					}
				],
				"url": {
					"raw": "http://localhost:8080/api/v1/user/server",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"v1",
						"user",
						"server"
					]
				},
				"description": "Получает информацию о сервере, к которому привязан пользователь"
			}
		},
		{
			"name": "Link Server to User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "User-ID",
						"value": "user-123",
						"description": "Идентификатор пользователя"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"server_token\": \"sk-1234567890abcdef\"\n}"
				},
				"url": {
					"raw": "http://localhost:8080/api/v1/user/link-server",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8080",
					"path": [
						"api",
						"v1",
						"user",
						"link-server"
					]
				},
				"description": "Привязывает сервер к пользователю (обычно после сканирования QR-кода)"
			}
		}
	]
}